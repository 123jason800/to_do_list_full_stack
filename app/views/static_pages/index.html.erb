<div class="<%= controller_name %> <%= action_name %>">
  <div class="container">

      <h1 class="text-center mt-4">To Do List</h1>
      
      <div class="mx-auto tasks-container">
        <div class="input-holder shadow">
          <input class="w-100 p-2" type="text" id="postTask" placeholder="Add a Note">
        </div>
        <div class="tasks-holder shadow mb-4" id="tasks">
          
        </div>
        <div class="btn-group">
          <button class="active btn-category" id='all'>
          All
          </button>
          <button class="btn-category" id="completed">
           Completed
           </button>
          <button class="btn-category" id="active">
          Active
           </button>



        </div>
  
  </div>
</div>